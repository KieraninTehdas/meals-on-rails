<h1 class="text-xl sm:text-4xl font-bold"><%= @recipe.name %></h1>

<% unless @recipe.recipe_book.nil? %>
  <p>
  <strong>Recipe Book:</strong>
    <%= link_to @recipe.recipe_book.name, recipe_book_path(@recipe.recipe_book) %>
  </p>
  <% unless @recipe.page_number.nil? %>
    <p>
    <strong>Page Number:</strong>
      <%= @recipe.page_number %>
    </p>
  <% end %>
<% end %>

<% if @recipe.labels.any? %>
  <p>
    <strong>Labels:</strong>
    <div class="flex gap-x-2 flex-wrap">
      <% @recipe.labels.each do |label| %>
        <%= link_to label.name, label, class: "text-xs bg-gray-200 rounded px-2 py-1" %>
      <% end %>
    </div>
  </p>
<% end %>

<% unless @recipe.ingredients.blank? %>
  <strong>Ingredients</strong>
  <div><%= simple_format(@recipe.ingredients) %></div>
<% end %>


<div class="flex gap-x-2">
  <%= button_to "Edit", edit_recipe_path(@recipe), :primary %>
  <%= button_to "Back", recipes_path, :secondary %>
</div>

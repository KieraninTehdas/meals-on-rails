<h1 class="text-xl sm:text-4xl font-bold">Recipes</h1>

<ul class="flex flex-col gap-y-4">
  <% @recipes.each do |recipe| %>
    <li>
      <div class="flex flex-row items-center gap-x-4">
        <%= button_to recipe.name, recipe, :tertiary %>
        <% if recipe.labels.any? %>
          <div class="flex gap-x-2 flex-wrap">
            <% recipe.labels.each do |label| %>
              <span class="text-xs bg-gray-200 rounded px-2 py-1"><%= label.name %></span>
            <% end %>
          </div>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>

<%= button_to "New recipe", new_recipe_path, :primary %>
